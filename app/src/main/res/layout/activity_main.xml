<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vssh_black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vssh"
            android:textColor="@color/vssh_white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.06" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/hostInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Host (z.B. 192.168.1.10)"
                android:inputType="textUri"
                android:textColor="@color/vssh_white"
                android:textColorHint="@color/vssh_gray"
                android:backgroundTint="@color/vssh_red" />

            <EditText
                android:id="@+id/portInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Port (Standard 22)"
                android:inputType="number"
                android:textColor="@color/vssh_white"
                android:textColorHint="@color/vssh_gray"
                android:backgroundTint="@color/vssh_red"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/userInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User"
                android:inputType="textPersonName"
                android:textColor="@color/vssh_white"
                android:textColorHint="@color/vssh_gray"
                android:backgroundTint="@color/vssh_red"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Passwort"
                android:inputType="textPassword"
                android:textColor="@color/vssh_white"
                android:textColorHint="@color/vssh_gray"
                android:backgroundTint="@color/vssh_red"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/connectButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Verbinden"
                    android:backgroundTint="@color/vssh_red"
                    android:textColor="@color/vssh_white" />

                <Button
                    android:id="@+id/disconnectButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Trennen"
                    android:backgroundTint="@color/vssh_red"
                    android:textColor="@color/vssh_white" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/terminalOutput"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginTop="16dp"
            android:background="@color/vssh_dark"
            android:padding="12dp"
            android:textColor="@color/vssh_white"
            android:textSize="12sp"
            android:typeface="monospace"
            android:textIsSelectable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/commandInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Command..."
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:textColor="@color/vssh_white"
                android:textColorHint="@color/vssh_gray"
                android:backgroundTint="@color/vssh_red" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Senden"
                android:backgroundTint="@color/vssh_red"
                android:textColor="@color/vssh_white" />
        </LinearLayout>

        <Button
            android:id="@+id/voiceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:enabled="false"
            android:text="Voice (STT)"
            android:backgroundTint="@color/vssh_red"
            android:textColor="@color/vssh_white" />

        <Button
            android:id="@+id/agentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Agent Ã¶ffnen"
            android:backgroundTint="@color/vssh_red"
            android:textColor="@color/vssh_white" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Einstellungen (OpenRouter)"
            android:backgroundTint="@color/vssh_red"
            android:textColor="@color/vssh_white" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
